docker {
    enabled = true
    temp = 'auto'
}

profiles {

    test {

        docker {
            enabled = true
            temp = 'auto'
        }

        params {
            help = null

            /* 
            Base directories
            */

            // Input
            genomeBaseDir = "${PWD}/src/data/reference"

            // Output
            baseDirReport = "${PWD}/results/reports"
            baseDirData   = "${PWD}/results/data"

            // trimming
            adapterR1 = 'CTGTCTCTTATACACATCT'
            adapterR2 = false
        }
    }
}

// Load genomes config files

includeConfig 'configs/genomes.config'
