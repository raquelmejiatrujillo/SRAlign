docker {
    enabled = true
    temp = 'auto'
}

profiles {

    test {
        docker {
            enabled = true
            temp = 'auto'
        }


        params {
            help = null

            /* 
            Base directories
            */

            // Output
            baseDirReport = "${PWD}/results/reports"
            baseDirData   = "${PWD}/results/data"

            // trimming
            adapterR1 = 'CTGTCTCTTATACACATCT'
            adapterR2 = false
        }
    }
}


params {
    // Input
    genomeBaseDir = "${PWD}/data/references"
}


// Load genomes config files

includeConfig 'configs/genomes.config'
